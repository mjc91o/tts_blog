<p id="notice"><%= notice %></p>

<h1 class="well">Posts</h1>
<p>Welcome <%= current_user.email %></p>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Blog entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="panel">
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.email %></td>
        <td><%= post.blog_entry %></td>
        <td class="btn btn-primary"><%= link_to 'Show', post %></td>
        <td class="btn btn-warning"><%= link_to 'Edit', edit_post_path(post) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
